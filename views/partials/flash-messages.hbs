{{#each messages}}

<!-- use the message's TYPE (@key) as part of the class
     (success-message, error-message, etc.) -->
<div class="{{@key}}-message">
  {{this}}
</div>

{{/each}}

<!-- 
  Example structure of "messages" (types are the keys:)
  {
    success: "Great job",
    error: "Wrong email"
  }
-->