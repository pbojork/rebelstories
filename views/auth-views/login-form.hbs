<div class="row d-flex justify-content-center  row-bg">

  <div class="col-6 col-12 bigcol d-flex justify-content-center flex-column align-items-center">
    <div class="my-form">
      <h2>Log In</h2>

      {{> flash_messages}}

      <form action="/process-login" method="POST">
        <label>
          Username:<br />
          <input type="text" name="userName" placeholder="lovelace" />
        </label>

        <label>
          Password:<br />
          <input type="password" name="originalPassword" placeholder="password" />
        </label>

        <button class="button">Log In</button>
      </form>
    </div>
  </div>
</div>

{{> footer}}